<Page x:Class="StoreFrontUi.Pages.ProductsFilterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreFrontUi.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      Background="White"
        d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsFilterPage">

    <Grid>
 
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="0" Background="#EEE">
                <!-- Sexo Filter -->
                <Expander Header="Sexo" IsExpanded="True" FontWeight="Bold">
                    <StackPanel Margin="10,5,0,0">
                        <CheckBox Content="Hombre" IsChecked="True"/>
                        <CheckBox Content="Mujer"/>
                        <CheckBox Content="Niños"/>
                    </StackPanel>
                </Expander>

                <Separator Margin="0 10"/>


                <Expander Header="Filtrar por precio" IsExpanded="True" FontWeight="Bold" Padding="5">
                    <StackPanel Margin="10,5,0,0">

                        <TextBlock Text="{Binding ElementName=PriceRangeSlider, Path=LowerValue, StringFormat='€{0}'}" 
                   FontWeight="SemiBold" Margin="0 0 5 0"/>
                        <TextBlock Text="{Binding ElementName=PriceRangeSlider, Path=HigherValue, StringFormat=' - €{0}'}" 
                   FontWeight="SemiBold" Margin="0 0 0 10"/>

                        <xctk:RangeSlider x:Name="PriceRangeSlider"
                          Minimum="0"
                          Maximum="1000"
                          LowerValue="0"
                           HigherValue="1000"
                          TickFrequency="10"
                          IsSnapToTickEnabled="True"
                          Orientation="Horizontal"
                          Height="30"/>
                    </StackPanel>
                </Expander>

                <Separator Margin="0 10"/>
                <!-- Category Filter -->
                <Expander Header="Categoria" IsExpanded="True" FontWeight="Bold">
                    <ComboBox>
                        
                    </ComboBox>
                </Expander>

            </StackPanel>

            <!-- Product Grid -->
            <ScrollViewer Grid.Column="1" Padding="10">
                <ItemsControl x:Name="ProductsGrid" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>


        <StatusBar Grid.Row="1" Background="#DDD">
            <StatusBarItem Width="auto">
                <ProgressBar x:Name="LoadingProgressBar"
                             Height="20"
                             IsIndeterminate="True"
                             Visibility="Collapsed" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
