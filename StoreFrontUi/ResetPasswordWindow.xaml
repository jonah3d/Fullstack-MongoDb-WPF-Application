<Window x:Class="StoreFrontUi.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreFrontUi"
        mc:Ignorable="d"
        Title="ResetPasswordWindow" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Username" />
            <TextBox x:Name="Txt_Username" Margin="0,5,0,10"/>

            <TextBlock Text="Email" />
            <TextBox x:Name="Txt_Email" Margin="0,5,0,10"/>

            <TextBlock Text="New Password" />
            <PasswordBox x:Name="Txt_NewPassword" Margin="0,5,0,10"/>

            <TextBlock Text="Confirm Password" />
            <PasswordBox x:Name="Txt_ConfirmPassword" Margin="0,5,0,20"/>

            <Button Content="Reset Password"
                    HorizontalAlignment="Center"
                    Width="150"
                    Click="ResetPassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
